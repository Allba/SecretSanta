default:
    formatters:
        pretty:
            verbose: true
            paths: false
            snippets: false

    suites:
        secretsanta:
            type: symfony_bundle
            bundle: IntractoBehatBundle
            contexts:
                   - Behat\MinkExtension\Context\MinkContext
                   - Intracto\BehatBundle\Features\Context\FeatureContext
                   - Intracto\BehatBundle\Features\Context\Bootstrap\PartyContext
                   - Intracto\BehatBundle\Features\Context\Bootstrap\LanguageContext
                   - Intracto\BehatBundle\Features\Context\Bootstrap\PartyManagementContext

    extensions:
        Behat\MinkExtension:
            base_url: 'http://dev.secretsantaorganizer.com/'
            default_session: symfony
            javascript_session: chrome
            sessions:
                symfony:
                    symfony2: ~
                chrome:
                    selenium2:
                        browser: chrome
                        capabilities:
                            browserName: chrome
                            browser: chrome
                            version: ''
                            chrome:
                                switches:
                                    - 'start-fullscreen'
                                    - 'start-maximized'
                                    - 'no-sandbox'
                firefox:
                    selenium2:
                        browser: firefox
            show_auto: false

        Behat\Symfony2Extension:
            kernel:
                env: test
                debug: false

        Lakion\Behat\MinkDebugExtension:
            directory: .travis/build
            clean_start: false
            screenshot: false

        FriendsOfBehat\PerformanceExtension: ~

        SensioLabs\Behat\PageObjectExtension:
          namespaces:
            page:
              - Intracto\BehatBundle\Page
