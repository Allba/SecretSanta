{% extends "IntractoSecretSantaBundle::base.html.twig" %}

{% block main %}
    <div class="box">
        <h1>{{ 'entry-expose_all.title'|trans }}</h1>
        <table cellspacing="0" cellpadding="3" class="table table-striped table-hover mysanta">
            <thead>
                <tr>
                    <th><strong>{{ "entry-expose_all.giving"|trans }}</strong></th>
                    <th>&nbsp;</th>
                    <th><strong>{{ "entry-expose_all.receiving"|trans }}</strong></th>
                </tr>
            </thead>
            <tbody>
            {% for participant in party.participants %}
                <tr>
                    <td>{{ participant.name }} ({{ participant.email }})</td>
                    <td>&raquo;</td>
                    <td>{{ participant.participant.name }} ({{ participant.participant.email }})</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock main %}
