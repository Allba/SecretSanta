{% extends "IntractoSecretSantaBundle:Emails:baseEmail.html.twig" %}
{% block main %}
    <table width="640" border="0" cellpadding="0" cellspacing="0" align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
        <tr>
            <td width="566">
                <p>{{ 'emails-pokeBuddy.message.html'|trans({"%name%": entry.name })|raw }}</p>
            </td>
        </tr>
        <tr>
            <td width="640" colspan="3">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td height="45" valign="top">
                            <table border="0" cellpadding="0" cellspacing="0" height="45">
                                <tr>
                                    <td height="40" valign="middle" style="background-color:#bd1019;">
                                        <a href="{{ url("entry_view", { "url": entry.url, "_locale": entry.pool.locale }) }}" target="_blank" rel="noopener noreferrer" style="font-family: Arial, Helvetica, sans-serif;background-color:#bd1019;font-size:18px;color:#ffffff;text-decoration: none;display:block;line-height: 40px;height: 40px">
                                            {{ 'emails-pokeBuddy.update_wishlist'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock %}
