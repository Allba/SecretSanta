{% extends "IntractoSecretSantaBundle:Emails:baseEmail.html.twig" %}
{% block main %}
    <table width="640" border="0" cellpadding="0" cellspacing="0" align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
        <tr>
            <td width="37" align="left">
            </td>
            <td width="566">
                <p>{{ 'emails-updated_party.message.html'|trans({"%name%": entry.name, "%owner%": entry.pool.getOwnerName})|raw }}</p>
                <table cellspacing="0" cellpadding="3" style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
                    <thead>
                        <tr>
                            <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-updated_party.label.date_party'|trans }}</th>
                            <th style="border-bottom: 1px solid #000;">&nbsp;</th>
                            <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-updated_party.label.location'|trans }}</th>
                            <th style="border-bottom: 1px solid #000;">&nbsp;</th>
                            <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-updated_party.label.amount_to_spend'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ entry.pool.eventdate|date('d M y') }}</td>
                            <td>&nbsp;</td>
                            <td>{{ entry.pool.location }}</td>
                            <td>&nbsp;</td>
                            <td>{{ entry.pool.amount }}</td>
                        </tr>
                    </tbody>
                </table>
                <a class="button" href="{{ url('entry_view', { 'url': entry.url, '_locale': entry.pool.locale }) }}" target="_blank" rel="noopener noreferrer" >
                    {{ 'emails-updated_party.btn.updated_party'|trans|raw }}
                </a>
            </td>
            <td width="37" align="right">
            </td>
        </tr>

    </table>
{% endblock %}