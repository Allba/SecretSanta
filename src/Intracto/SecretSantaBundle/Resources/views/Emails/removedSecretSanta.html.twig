{% extends 'IntractoSecretSantaBundle:Emails:baseEmail.html.twig' %}
{% block main %}
    <table width="640" border="0" cellpadding="0" cellspacing="0" align="center">
        <tr>
            <td width="566">
                <p>{{ 'emails-removed_secret_santa.message.html'|trans({'%name%': entry.name, '%owner%': entry.pool.getOwnerName})|raw }}</p>
            </td>
        </tr>
        <tr>
            <td width="640" colspan="3">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td height="45" valign="top">
                            <table border="0" cellpadding="0" cellspacing="0" height="45">
                                <tr>
                                    <td height="40" valign="middle" style="background-color:#bd1019;">
                                        <a href="{{ url('entry_view', { 'url': entry.url }) }}" target="_blank" rel="noopener noreferrer" style="font-family: Arial, Helvetica, sans-serif;background-color:#bd1019;font-size:18px;color:#ffffff;text-decoration: none;display:block;line-height: 40px;height: 40px">
                                            {{ 'emails-removed_secret_santa.btn.find_out'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock %}
