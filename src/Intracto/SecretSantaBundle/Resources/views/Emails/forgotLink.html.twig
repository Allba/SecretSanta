{% extends "IntractoSecretSantaBundle:Emails:baseEmail.html.twig" %}
{% block main %}
    <table width="640" border="0" cellpadding="0" cellspacing="0" align="center">
        <tr>
            <td width="566">
                <span style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
                    {{ 'emails-forgot_link.message.html'|trans|raw }}

                </span>
                <br /> <br />
                <br />
            </td>
        </tr>
        {% for link in poolLinks %}
        <tr>
            <td width="640" colspan="3">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td height="45" valign="top">
                            <table border="0" cellpadding="0" cellspacing="0" height="45">
                                <tr>
                                    <td>
                                        <a href="{{ link.url }}" target="_blank" rel="noopener noreferrer" style="font-family: Arial, Helvetica, sans-serif;background-color:#bd1019;font-size:18px;color:#ffffff;text-decoration: none;display:block;line-height: 40px;height: 40px">
                                            {{ link.text }}
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr><td>&nbsp;</td></tr>
        {% endfor %}
    </table>
{% endblock %}
