{% extends "IntractoSecretSantaBundle:Emails:baseEmail.html.twig" %}
{% block main %}
    <table width="640" border="0" cellpadding="0" cellspacing="0" align="center">
        <tr>
            <td width="566">
                <span style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
                    {{ 'emails-pendingConfirmation.salutation'|trans({'%name%': pool.getOwnerName}) }}, <br/><br/>
                    {{ 'emails-pendingConfirmation.click_button'|trans }}

                </span>
                <br /> <br />
                <span style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333;line-height: 25px;">
                    {{ 'emails-pendingConfirmation.overview_page'|trans }}
                </span>
                <br /> <br />
                    <span style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333;line-height: 25px;">
                    {{ 'emails-pendingConfirmation.lastly'|trans }}
                </span>
                <br /> <br />
                <br />
            </td>
        </tr>
        <tr>
            <td width="640" colspan="3">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td height="45" valign="top">
                            <table border="0" cellpadding="0" cellspacing="0" height="45">
                                <tr>
                                    <td height="40" valign="middle" style="background-color:#bd1019;">
                                        <a href="{{ url('pool_manage', { 'listUrl': pool.listurl }) }}" target="_blank" rel="noopener noreferrer" style="font-family: Arial, Helvetica, sans-serif;background-color:#bd1019;font-size:18px;color:#ffffff;text-decoration: none;display:block;line-height: 40px;height: 40px">
                                            {{ 'emails-pendingConfirmation.btn_validate'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock %}
