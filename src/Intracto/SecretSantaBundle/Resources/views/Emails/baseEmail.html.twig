 <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>{{ 'emails-base_email.title'|trans }}</title>
    </head>
    <body>
        <style type="text/css">
            body{
                -webkit-text-size-adjust: none;
            }
            .button {
                font-family: Arial, Helvetica, sans-serif;
                background-color: #bd1019;
                border: none;
                color: white;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
                border-radius: 6px;
            }
        </style>
        <!--header-->
        <table width="640" border="0" cellpadding="0" cellspacing="0" align="center">
            <tr>
                <td width="640">
                    <img src="{{ absolute_url(asset('/bundles/intractosecretsanta/img/mail/header.jpg')) }}" width="640" height="146" style="display:block;" border="0" />
                </td>
            </tr>
        </table>

        <!--content-->
        {% block main %}{% endblock %}
        <!--footer-->
        <table width="640" border="0" cellpadding="0" cellspacing="0" align="center">
            <tr>
                <td width="640" height="82" colspan="3">
                    <img src="{{ absolute_url(asset('/bundles/intractosecretsanta/img/mail/footer-top.jpg')) }}" width="640" height="82" style="display:block;" border="0" />
                </td>
            </tr>
            <tr>
                <td width="37" height="21">
                    <img src="{{ absolute_url(asset('/bundles/intractosecretsanta/img/mail/left-middle-footer.jpg')) }}" width="37" height="21" style="display:block;" border="0" />
                </td>
                <td width="331" height="21">
                    <span style="font-family: Arial, Helvetica, sans-serif;color:#6e7070;line-height: 21px;background-color:#ffffff;font-size:13px;">{{ 'emails-base_email.footer'|trans }}
                        <br/>{{ 'emails-base_email.created_by'|trans }}</span>
                    <a href="http://www.intracto.com" target="_blank" rel="noopener noreferrer" style="color:#b3141c;font-family: Arial, Helvetica, sans-serif; line-height: 21px; background-color: #ffffff;font-size:13px;text-decoration: none">Intracto digital agency</a>
                </td>
                <td width="272" headers="36">
                    <img src="{{ absolute_url(asset('/bundles/intractosecretsanta/img/mail/footer-right.jpg')) }}" width="272" height="36" style="display:block;" border="0" />
                </td>
            </tr>
        </table>
    </body>
</html>
