{% extends "IntractoSecretSantaBundle:Emails:baseEmail.html.twig" %}
{% block main %}
    <table width="640" border="0" cellpadding="0" cellspacing="0" align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
        <tr>
            <td width="37" align="left">
            </td>
            <td width="566">
                <p>{{ 'emails-pool_status.message.html'|trans({'%owner%': pool.getOwnerName})|raw }}</p>
                <table cellspacing="0" cellpadding="3" style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
                    <thead>
                    <tr>
                        <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-pool_status.label.name'|trans }}</th>
                        <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-pool_status.label.email'|trans }}</th>
                        <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-pool_status.label.confirmed'|trans }}</th>
                        <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-pool_status.label.wishlist_filled'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entry in pool.entries %}
                        <tr>
                            <td>{{ entry.name }}</td>
                            <td>{{ entry.email }}</td>
                            <td>{% if entry.viewdate %}{{ 'emails-pool_status.yes'|trans }}{% else %}{{ 'emails-pool_status.not_yet'|trans }}{% endif %}</td>
                            <td>{% if entry.wishlistItems is not empty %}{{ 'emails-pool_status.yes'|trans }}{% else %}{{ 'emails-pool_status.not_yet'|trans }}{% endif %}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <br/>
                <a href="{{ url('pool_manage', { 'listUrl': pool.listurl }) }}"
                   target="_blank" rel="noopener noreferrer"
                   class="button">
                    {{ 'emails-pool_status.btn.poolstatus'|trans }}
                </a>
            </td>
            <td width="37" align="right">
            </td>
        </tr>

    </table>
{% endblock %}