{% extends "IntractoSecretSantaBundle::base.html.twig" %}
{% block metadata %}
    <meta name="robots" content="noindex, nofollow">
{% endblock %}
{% block stylesheets %}
    {% stylesheets
    'bundles/intractosecretsanta/css/report.css'
    filter='cssrewrite' %}
    {% endstylesheets %}
{% endblock %}
{% block main %}
    <h1>{{ 'report.title'|trans }}</h1>

    <div>
        <p>{{ 'report.season_info'|trans }}</p>
    </div>
    <form method="GET">
        <div class="row">
            <div class="span3">
                <select name="year" id="Year" onchange="this.form.submit();">
                    <option {% if(current_year == "all") %} selected="selected" {% endif %} value="all">{{ 'report.all_time'|trans }}
                    </option>
                    {% for year in featured_years['featured_years'] %}
                        <option value="{{ year }}" {% if(current_year == year) %} selected="selected" {% endif %}>{{ year }} - {{ year+1 }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </form>

    {% if data_pool is empty %}
        <div>
            <p>{{ 'report.no_data'|trans }}</p>
        </div>
    {% else %}
        <h2>Resultaten</h2>

        {% if current_year != 'all' %}
            <div class="col-xs-6 report">
                <h3>Enkel {{ current_year }}-{{ current_year + 1 }}</h3>
                <p><strong>Feestjes:</strong> {{ data_pool['pools'][0]['poolCount'] }}</p>
                <p><strong>Deelnemers:</strong> {{ data_pool['entries'][0]['entryCount'] }}</p>
                <p><strong>Gemiddelde aantal deelnemers per feestje:</strong> {{ data_pool['entry_average']|round }}</p>
                <p><strong>Unieke emailadressen:</strong> {{ data_pool['distinct_entries'][0]['distinctEntryCount'] }}</p>
                <p><strong>Aantal ingevulde verlanglijsten:</strong> {{ data_pool['wishlist_average']|number_format(2, '.', '') }}%</p>
            </div>

            <div class="col-xs-6 report">
                <h3>Totaal (inclusief {{ current_year }}-{{ current_year + 1 }})</h3>
                <p><strong>Feestjes:</strong> {{ data_pool['total_pools'][0]['totalPoolCount'] }}</p>
                <p><strong>Deelnemers:</strong> {{ data_pool['total_entries'][0]['totalEntryCount'] }}</p>
                <p><strong>Gemiddelde aantal deelnemers per feestje:</strong> {{ data_pool['total_entry_average']|round }}</p>
                <p><strong>Unieke emailadressen:</strong> {{ data_pool['total_distinct_entries'][0]['totalDistinctEntryCount'] }}</p>
                <p><strong>Aantal ingevulde verlanglijsten:</strong> {{ data_pool['total_wishlist_average']|number_format(2, '.', '') }}%</p>
            </div>

            <div class="col-xs-6 report">
                {% if current_year == 'all' %}
                    <h3>Pool growth per year</h3>
                {% else %}
                    <h3>Nieuwe feestjes per maand</h3>
                {% endif %}

                <div id="line_chart_pools" style="width: 100%"></div>
            </div>

            <div class="col-xs-6 report">
                <h3>Totaal feestjes (inclusief {{ current_year }}-{{ current_year + 1 }})</h3>
                <div id="line_chart_total_pools" style="width: 100%"></div>
            </div>

            <div class="col-xs-6 report">
                {% if current_year == 'all' %}
                    <h3>Entry growth per year</h3>
                {% else %}
                    <h3>Nieuwe deelnemers per maand</h3>
                {% endif %}

                <div id="line_chart_entries" style="width: 100%"></div>
            </div>

            <div class="col-xs-6 report">
                <h3>Totaal deelnemers (inclusief {{ current_year }}-{{ current_year + 1 }})</h3>
                <div id="line_chart_total_entries" style="width: 100%"></div>
            </div>
        {% else %}
            <div>Test</div>
        {% endif %}

        <div class="clearfix"></div>
    {% endif %}
{% endblock %}
{% block javascripts %}
    {% if data_pool is not empty %}
        {% if current_year != 'all' %}
            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
            <script type="text/javascript">
                google.charts.load('43', {packages: ['corechart']});
                google.charts.setOnLoadCallback(drawChart);

                function drawChart(){
                    var chartOptions = {
                        legend: {position: 'bottom'}
                    };

                    var poolData = new google.visualization.DataTable();
                    poolData.addColumn('string', 'Month');
                    poolData.addColumn('number', 'Amount');
                    poolData.addRows([
                        {% if current_year == 'all' %}
                        {% for pool in data_pool['linechart_data']['data'] %}
                        ['1', {{ pool[0]['poolCount'] }}],
                        {% endfor %}
                        {% else %}
                        {% for pool in data_pool['linechart_pools'] %}
                        ['{{ pool['month']|date("M") }}', {{ pool['growthPool'] }}],
                        {% endfor %}
                        {% endif %}
                    ]);
                    var poolChart = new google.visualization.LineChart(document.getElementById('line_chart_pools'));
                    poolChart.draw(poolData, chartOptions);

                    var totalPoolData = new google.visualization.DataTable();
                    totalPoolData.addColumn('string', 'Month');
                    totalPoolData.addColumn('number', 'Amount');
                    totalPoolData.addRows([
                        {% for pool in data_pool['total_chart_pools'] %}
                        ['{{ pool['month']|date("M Y") }}', {{ pool['totalPoolCount'] }}],
                        {% endfor %}
                    ]);
                    var totalPoolChart = new google.visualization.LineChart(document.getElementById('line_chart_total_pools'));
                    totalPoolChart.draw(totalPoolData, chartOptions);

                    var entryData = new google.visualization.DataTable();
                    entryData.addColumn('string', 'Month');
                    entryData.addColumn('number', 'Amount');
                    entryData.addRows([
                        {% if current_year == 'all' %}
                        {% for entry in data_pool['linechart_data']['entry_data'] %}
                        ['1', {{ entry[0]['entryCount'] }}],
                        {% endfor %}
                        {% else %}
                        {% for entry in data_pool['linechart_entries'] %}
                        ['{{ entry['month']|date("M") }}', {{ entry['growthEntries'] }}],
                        {% endfor %}
                        {% endif %}
                    ]);
                    var entryChart = new google.visualization.LineChart(document.getElementById('line_chart_entries'));
                    entryChart.draw(entryData, chartOptions);

                    var totalEntryData = new google.visualization.DataTable();
                    totalEntryData.addColumn('string', 'Month');
                    totalEntryData.addColumn('number', 'Amount');
                    totalEntryData.addRows([
                        {% for entry in data_pool['total_chart_entries'] %}
                        ['{{ entry['month']|date("M Y") }}', {{ entry['totalEntryCount'] }}],
                        {% endfor %}
                    ]);
                    var totalEntryChart = new google.visualization.LineChart(document.getElementById('line_chart_total_entries'));
                    totalEntryChart.draw(totalEntryData, chartOptions);
                }
            </script>
        {% endif %}
    {% endif %}
{% endblock %}